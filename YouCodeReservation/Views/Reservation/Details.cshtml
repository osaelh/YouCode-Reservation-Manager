@model YouCodeReservation.Models.ReservationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ReservationViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingStudent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestingStudent.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservationType.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Status == null)
    {
        <a class="btn btn-success" asp-action="ApprouveRequest" asp-route-id="@Model.Id"><i class="fa fa-check"></i>Approuve</a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id"><i class="fa fa-remove"></i>Reject</a>
    }
    <a class="btn btn-outline-dark" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back to List
    </a>
</div>
