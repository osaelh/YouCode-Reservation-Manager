@model YouCodeReservation.Models.ReservationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @if (Model.Status == true)
        {
         <dd class="badge badge-success col-sm-10">
                Approuved
        </dd>
        }
        else if (Model.Status == false)
        {
        <dd class="badge badge-danger col-sm-10">
                Denied
        </dd>
        }
        else
        {
        <dd class="badge badge-warning col-sm-10">
                Pending
        </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingStudent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingStudent.FirstName) @Html.DisplayFor(model => model.RequestingStudent.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Status == null)
    {
        <a class="btn btn-success" asp-action="ApprouveRequest" asp-route-id="@Model.Id"><i class="fa fa-check"></i>Approuve</a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id"><i class="fa fa-remove"></i>Reject</a>
    }
    <a class="btn btn-outline-dark" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back to List
    </a>
</div>
